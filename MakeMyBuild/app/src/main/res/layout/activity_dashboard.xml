<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/googlebold"
        android:text="Hi!"
        android:textAlignment="center"
        android:layout_marginLeft="@dimen/_20sdp"
        android:textColor="#000000"
        android:textIsSelectable="false"
        android:textSize="34sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/googleregular"
        android:text="Welcome to Super - Dash Board"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:gravity="center_horizontal" />
    </LinearLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="48dp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:src="@drawable/pratosh"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/customise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/google_button">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/googleregular"
            android:text="Order Status"
            android:textColor="#000000"
            android:textSize="@dimen/_11ssp"
            tools:ignore="RtlCompat" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/googleregular"
            android:text="Acquiring Components"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColor="#ff4c4c"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:text="We are acquiring the requested products from the marketplace. We will update you once we are done with this step. If any product is unavailable, don't worry we will let you know about the equivalent replacement with the most honest price available."
            android:textColor="@color/black"
            android:fontFamily="@font/googleregular"
            android:textSize="@dimen/_11ssp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/chat"
                android:layout_width="130dp"
                android:layout_height="70dp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="9dp"
                android:backgroundTint="#B4B2F4"
                android:fontFamily="@font/sfprosemibold"
                android:textSize="@dimen/_8ssp"
                android:text="Chat regarding order"
                android:textColor="@color/black"
                app:cornerRadius="50dp"/>
            <Button
                android:layout_width="130dp"
                android:layout_height="70dp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#f78780"
                android:fontFamily="@font/sfprosemibold"
                android:textSize="@dimen/_8ssp"
                android:text="Cancel Order"
                android:textColor="@color/black"
                app:cornerRadius="50dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/googleregular"
            android:text="-> Order cancellations will not be accepted after the components have been acquired from the market."
            android:textColor="@color/black"
            android:textSize="@dimen/_9ssp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:text="-> If order is cancelled during the component acquisition, a convenience charge of â‚¹500 will be deducted from the refund issued."
        android:textColor="@color/black"
        android:fontFamily="@font/googleregular"
        android:textSize="@dimen/_9ssp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:text="-> Any order cancellation before the acquisition process starts will be accepted with ease and refund will be issues to the source bank within 48 hours."
        android:textColor="@color/black"
        android:fontFamily="@font/googleregular"
        android:textSize="@dimen/_9ssp"/>
    <LinearLayout
        android:id="@+id/builderschoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/yellow_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/googleregular"
            android:text="Special Curated Solutions"
            android:textColor="#000000"
            android:textSize="@dimen/_11ssp"
            tools:ignore="RtlCompat" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/googleregular"
            android:text="Builder's Choices"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColor="#000"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:text="Select our handpicked choices for some general price points at which our customers love to buy a PC."
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/_20sdp"
            android:fontFamily="@font/googleregular"
            android:textSize="@dimen/_11ssp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/mypc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/blue_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/googleregular"
            android:text="Recommendation for everyone"
            android:textColor="#000000"
            android:textSize="@dimen/_11ssp"
            tools:ignore="RtlCompat" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/googleregular"
            android:text="My Life My PC"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColor="#000"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:text="Use our system generated recommendations for each and every budget to decide what PC you want to buy. You can even go full blown into custom choices to manually configure what you want. This is choice, right in the palm of hands."
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/_20sdp"
            android:fontFamily="@font/googleregular"
            android:textSize="@dimen/_11ssp"/>
    </LinearLayout>

    <Button
        android:id="@+id/contact_us_btn1"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="45dp"
        android:backgroundTint="#E7E7E7"
        android:fontFamily="@font/sfprosemibold"
        android:shadowDx="0"
        android:textSize="13sp"
        android:shadowDy="0"
        android:shadowRadius="10"
        android:layout_marginBottom="@dimen/_20sdp"
        android:text="Contact Us"
        android:textColor="@color/black"
        app:cornerRadius="50dp" />

</LinearLayout>
</ScrollView>