<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditProfileActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/googleregular"
            android:text="Edit your"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/googlebold"
            android:text="Profile"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textColor="#000000"
            android:textIsSelectable="false"
            android:textSize="34sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            android:gravity="center_horizontal" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_pic1"
            android:layout_width="140dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/pratosh"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/googleregular"
                android:text="Name"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:textSize="@dimen/_12ssp"
                android:gravity="center_horizontal"
                tools:ignore="RtlCompat" />
            <EditText
                android:id="@+id/etname1"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="41dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/button_bg"
                android:ems="10"
                android:layout_marginLeft="@dimen/_5sdp"
                android:fontFamily="@font/googleregular"
                android:autofillHints="emailAddress"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@android:color/transparent"
                 android:fontFamily="@font/googleregular"
                android:text="Ph. No."
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:textSize="@dimen/_12ssp"
                android:gravity="center_horizontal"
                tools:ignore="RtlCompat" />
            <EditText
                android:id="@+id/etphone1"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="41dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/button_bg"
                android:ems="10"
                android:fontFamily="@font/googleregular"
                android:autofillHints="emailAddress"
                android:hint=""
                android:inputType="phone"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/googleregular"
                android:text="Alt. Ph."
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:textSize="@dimen/_12ssp"
                android:gravity="center_horizontal"
                tools:ignore="RtlCompat" />
            <EditText
                android:id="@+id/etaltphone1"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="41dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/button_bg"
                android:ems="10"
                android:fontFamily="@font/googleregular"
                android:autofillHints="emailAddress"
                android:hint=""
                android:inputType="phone"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/googleregular"
                android:text="Address"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:textSize="@dimen/_12ssp"
                android:gravity="center_horizontal"
                tools:ignore="RtlCompat" />
            <EditText
                android:id="@+id/etaddress1"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/button_bg"
                android:ems="10"
                android:fontFamily="@font/googleregular"
                android:autofillHints="emailAddress"
                android:hint=""
                android:maxLines="5"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="15sp" />
        </LinearLayout>
        <Button
            android:id="@+id/save_changes"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:backgroundTint="#B4B2F4"
            android:textSize="13sp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/sfprosemibold"
            android:hapticFeedbackEnabled="true"
            android:shadowDx="0"
            android:layout_marginTop="20dp"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:text="Save Changes"
            android:textColor="@color/black"
            app:cornerRadius="50dp" />

        <Button
            android:id="@+id/contact_us_btn2"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="45dp"
            android:backgroundTint="#E7E7E7"
            android:fontFamily="@font/sfprosemibold"
            android:shadowDx="0"
            android:textSize="13sp"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:layout_marginBottom="@dimen/_20sdp"
            android:text="Contact Us"
            android:textColor="@color/black"
            app:cornerRadius="50dp" />
    </LinearLayout>

</ScrollView>